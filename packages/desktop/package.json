{
  "name": "@pet-management/desktop",
  "version": "1.0.0",
  "description": "Pet Management Desktop App (Electron)",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:main\" \"pnpm run dev:renderer\" \"pnpm run start\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "cd ../web && pnpm run dev",
    "start": "wait-on http://localhost:5200 && electron .",
    "build": "pnpm run build:main && pnpm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "cd ../web && pnpm run build",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "package": "electron-builder"
  },
  "dependencies": {
    "@pet-management/shared": "workspace:*",
    "better-sqlite3": "^9.2.2",
    "electron": "^28.0.0",
    "electron-updater": "^6.1.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "wait-on": "^9.0.1"
  }
}
