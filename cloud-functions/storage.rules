rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Pet Photos: owners can upload, authenticated users can read
    match /pet_photos/{userId}/{petId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Vaccine Documents: owners can upload, authenticated users can read
    match /vaccine_documents/{userId}/{petId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Stay Update Photos: authenticated users can read, staff can write
    match /stay_updates/{bookingId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.role in ['staff', 'manager', 'admin'];
      allow delete: if request.auth != null && 
        request.auth.token.role in ['manager', 'admin'];
    }
    
    // Invoices: owners can read their invoices
    match /invoices/{userId}/{invoiceId}/{fileName} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        request.auth.token.role in ['staff', 'manager', 'admin']
      );
      allow write: if request.auth != null && 
        request.auth.token.role in ['manager', 'admin'];
    }
    
    // Backups: admin only
    match /backups/{backupId}/{fileName} {
      allow read: if request.auth != null && request.auth.token.role == 'admin';
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Exports: admin only
    match /exports/{fileName} {
      allow read: if request.auth != null && request.auth.token.role == 'admin';
      allow write: if false; // Only Cloud Functions can write
    }
  }
}
